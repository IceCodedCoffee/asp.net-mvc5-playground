@model IEnumerable<string>

<div class="btn-group btn-group-sm btn-group-justified">

    @Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-block btn-default btn-sm" + (ViewBag.SelectedCategory == null ? " btn-primary border" : "") })

    @foreach (var link in Model)
    {
        @Html.RouteLink(link, new { controller = "Product", action = "List", category = link, page = 1 },
                              new { @class = "btn btn-default btn-sm" + (link == ViewBag.SelectedCategory ? " btn-primary" : "") })
    }
</div>